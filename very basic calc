#include <iostream>
using namespace std;
int x;
int y;
int oper;
int main() {
    cout<<"enter first number\n";
    cin>>x;
    cout<<"enter second number\n";
    cin>>y;
    cout<<"choose an operation\n";
    cout<<"1. +\n";
    cout<<"2. -\n";
    cout<<"3. *\n";
    cout<<"4. /\n";
    cout<<"5. modulus\n";
    cin>>oper;
    if (oper==1)
    cout<<x<<" + "<<y<<" = "<<x+y;
    else if (oper==2)
    cout<<x<<" - "<<y<<" = "<<x-y;
    else if (oper==3)
    cout<<x<<" * "<<y<<" = "<<x*y;
    else if (oper==4)
    cout<<x<<" / "<<y<<" = "<<x/y;
    else if (oper==5)
    cout<<x<<" modulus "<<y<<" = "<<x%y;
  return 0;
}